
doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title Movie Insert
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/css/bootstrap-combined.min.css', rel='stylesheet')
    style(type='text/css').
    script(src='http://code.jquery.com/jquery-1.11.1.min.js')
    script(src='http://netdna.bootstrapcdn.com/twitter-bootstrap/2.3.2/js/bootstrap.min.js')
  body


      .container
          .row(style='margin-top:70px')
              .col-xs-12.col-sm-8.col-md-6.col-sm-offset-2.col-md-offset-3
                h1(style='color: #5e9ca0;') 예매 내역
                br
                form(method='post', action='/mypage', name='userform')
                  table.table.table-striped(width='800')
                    thead
                      tr 
                        th 영화 이름
                        th 시간
                        th 좌석 번호
                        th 표 갯수
                        th 가격
                    tbody
                        tr
                          td= data.movie_title
                          td= data.movie_playdate.getFullYear() +"/" + data.movie_playdate.getMonth() +"/"+ data.movie_playdate.getDate() +"--" +data.movie_playdate.getHours() +":"+data.movie_playdate.getMinutes()
                          td= data.now_reserved_seat
                          td 1
                          td 7000       
    
              h2 결제 하시겠습니까?
              form(method='post', action='/payment', name='movieform')
                

                input.span3(type='hidden', name='movie_title', value='#{data.movie_title}')
                
              
                input.span3(type='hidden', name='movie_playdate', value='#{data.movie_playdate}')
                
              
                input.span3(type='hidden', name='seat_number',value='#{data.now_reserved_seat}')
                

                input.span3(type='hidden', name='reservation_count', value=1)
                
                input(type='hidden', name='price', value='7000')
                
                input(id="pay" type='submit', value='결제')
                .clearfix
    script(type='text/javascript').
    
    script.
      $("#pay").click(function () {
        alert("결제가 완료되었습니다!!");
      });

